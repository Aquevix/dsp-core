##**************************************************************************
## This file configures a single server for HTTP and HTTPS
##**************************************************************************

# dsp.local:80 and dsp.local:443
server {
	listen 80;
	listen 443 ssl;

	# Change these values accordingly
	server_name  		dsp.local;
	root 				/var/www/launchpad/web;
	keepalive_timeout   70;

	# Change locations/names as you please
	error_log	/var/www/launchpad/log/nginx.error.log;
	access_log 	/var/www/launchpad/log/nginx.access.log extended buffer=32k;

	# SSL config
	ssl_certificate 			/path/to/your/cert/file.pem;
	ssl_certificate_key 		/path/to/your/key/file.key;
	ssl_protocols 				SSLv3 TLSv1 TLSv1.1 TLSv1.2;
	ssl_ciphers 				HIGH:!aNULL:!MD5;
	ssl_prefer_server_ciphers 	on;
	ssl_session_timeout 		5m;

	# Our DSP locations
	include dsp-locations.conf;
}
